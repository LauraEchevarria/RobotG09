<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/back"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/btn_remoto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/mainButtons"
            android:text="REMOTO" />

        <Button
            android:id="@+id/btn_labterinto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/btn_remoto"
            android:layout_alignParentStart="true"
            android:background="@color/mainButtons"
            android:text="LABERINTO" />

        <Button
            android:id="@+id/btn_acelerometro"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/btn_labterinto"
            android:layout_alignParentStart="true"
            android:background="@color/mainButtons"
            android:text="ACCELEROMETRO" />

        <Button
            android:id="@+id/btn_comunicacion"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_below="@id/btn_acelerometro"
            android:layout_marginTop="8dp"
            android:background="@color/mainButtons"
            android:text="COMUNICACION" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>